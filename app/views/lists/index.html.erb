<div class="banner text-center">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mt-2 mb-4">
        <h1>My Lists</h1>
        <%= link_to new_list_path do %>
        <button type="button" class="btn btn-success text-light">Create a new list</button>
        <% end %>
    </div>

    
    <div class="cards">
        <% @lists.each do |list| %>
            <%= link_to list_bookmarks_path(list) do %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
                <%= list.name %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>